generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id String @id @default(uuid())

  name        String
  description String
  image_name  String
  value       Float
  quantity    Int

  created_at DateTime @default(now())

  @@map("products")
}

model User {
  id String @id @default(uuid())

  name     String
  email    String
  password String

  created_at DateTime @default(now())

  @@map("users")
}

model UserSession {
  id String @id @default(uuid())

  user_id    String   @unique
  expires_at DateTime

  created_at DateTime @default(now())

  @@map("users_session")
}
